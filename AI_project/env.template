# Ollama base URL (without /api)
OLLAMA_BASE_URL=http://localhost:11434

# Enable Ollama API
ENABLE_OLLAMA_API=true

# ========================================
# WEBUI SETTINGS
# ========================================
# WebUI URL (optional)
WEBUI_URL=http://localhost:8080

# ========================================
# DEVELOPMENT SETTINGS
